<div class="card border border-gray-300 bg-slate-200 p-2">
    <div class="rounded border-current">
        <div class="text-sm">
            #{{ card.number }} - {{ card.filename }}
        </div>
        <div class="py-2">
            <img class="card-{{ card.number }}" src="data:image/png;base64,{{ card.image }}"/>
        </div>
        <div>
            <label>W:
                <input name="mw-{{ card.number }}" value="{{ card.mw }}" class="w-12 mt-1 p-0 px-1 rounded border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 card-option" type="number" step="2" />
            </label>
            <label>H:
                <input name="mh-{{ card.number }}" value="{{ card.mh }}" class="w-12 mt-1 p-0 px-1 rounded border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 card-option" type="number" step="2" />
            </label>
            <label>X:
                <input name="mx-{{ card.number }}" value="{{ card.mx }}" class="w-12 mt-1 p-0 px-1 rounded border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 card-option" type="number" step="2" />
            </label>
            <label>Y:
                <input name="my-{{ card.number }}" value="{{ card.my }}" class="w-12 mt-1 p-0 px-1 rounded border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 card-option" type="number" step="2" />
            </label>
            <label>R:
                <input name="rot-{{ card.number }}" value="{{ card.rot }}" class="w-14 mt-1 p-0 px-1 rounded border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 card-option" type="number" step="0.2"/>
            </label>

            <input class="mt-1 p-0 px-1 rounded border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 gen-button" data-number="{{ card.number }}" type="button" value="Generar"/>
        </div>
    </div>
</div>
